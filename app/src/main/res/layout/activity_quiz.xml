<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".QuizActivity">

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="90dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="38dp"
            android:layout_height="50dp"
            android:layout_marginTop="17dp"
            android:src="@drawable/coin9" />

        <TextView
            android:id="@+id/txtCoin"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="12"
            android:textColor="@android:color/white"
            android:textSize="27sp" />

        <TextView
            android:layout_width="216dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Quiz Time App"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtTotalQuestion"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:text="1/10"
            android:textColor="@android:color/white"
            android:textSize="26dp"
            android:textStyle="bold" />




    </LinearLayout>

    <LinearLayout
        android:id="@+id/l2"
        android:layout_width="387dp"
        android:layout_height="45dp"
        android:layout_marginTop="90dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_gravity=""
            android:layout_marginLeft="90dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/greentick10" />

        <TextView
            android:id="@+id/txtCorrect"
            android:layout_width="48dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="12"
            android:textColor="@android:color/white"
            android:textSize="30dp" />


        <ImageView
            android:layout_width="28dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginStart="40dp"
            android:src="@drawable/wrong8"
            android:contentDescription="@string/todop" />

        <TextView
            android:id="@+id/txtWrong"
            android:layout_width="46dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="8"
            android:textColor="@android:color/white"
            android:textSize="30dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/l2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="53dp"
                android:layout_height="35dp"
                android:src="@drawable/timer10" />

            <TextView
                android:id="@+id/txtTimer"
                android:layout_width="63dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="29"
                android:textColor="@android:color/white"
                android:textSize="20dp" />
        </LinearLayout>



        <TextView
            android:id="@+id/txtTriviaQuestion"
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:text="@string/what_is_the_best_full_meaning_of_android_operating_system"
            android:textColor="@android:color/white"
            android:textSize="20dp" />

        <Button
            android:id="@+id/buttonA"
            android:onClick="buttonA"
            android:layout_width="358dp"
            android:layout_height="65dp"
            android:text="@string/design"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:layout_marginTop="27dp"
            android:background="@drawable/bb" />
        <Button
            android:id="@+id/buttonB"
            android:onClick="buttonB"
            android:layout_width="358dp"
            android:layout_height="65dp"
            android:text="Operating System"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/bb" />
        <Button
            android:onClick="buttonC"
            android:id="@+id/buttonC"
            android:layout_width="358dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:text="Smart Phone"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bb" />
        <Button
            android:id="@+id/buttonD"
            android:onClick="buttonD"
            android:layout_width="358dp"
            android:layout_height="65dp"
            android:text="Quizi Quizi"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/bb" />





    </LinearLayout>




</RelativeLayout>